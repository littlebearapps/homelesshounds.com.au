      <!-- Newsletter Signup -->
      <div class="border-t border-gray-800 pt-8">
        <div class="max-w-md mx-auto text-center">
          <h3 class="text-white font-semibold mb-2">Stay Connected</h3>
          <p class="text-sm mb-4">Get rescue stories, adoption alerts, and ways to help</p>
          <form class="flex flex-col sm:flex-row gap-3" action="/api/newsletter" method="POST">
            <label for="email" class="sr-only">Email address</label>
            <input
              type="email"
              id="email"
              name="email"
