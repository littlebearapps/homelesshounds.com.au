---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
const { title = "Homeless Hounds", description = "Volunteer-run animal rescue in Victoria" } = Astro.props;
---

<style>
  /* Mobile menu styles */
  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }
    .mobile-menu-btn {
      display: block;
    }
  }
  @media (min-width: 769px) {
    .mobile-menu-btn {
      display: none;
    }
    .mobile-nav {
      display: none !important;
    }
  }
</style>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/hh-logo.png" />
  </head>
  <body>
    <!-- Header with sticky navigation -->
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-white/80 border-b border-gray-200 shadow-sm">
      <div class="container-custom">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="flex items-center gap-2 group">
            <img src="/hh-logo.png" alt="Homeless Hounds Logo" class="h-10 w-10 transition-transform group-hover:scale-105" />
            <span class="font-bold text-lg text-gray-900">Homeless Hounds</span>
          </a>

          <!-- Desktop Navigation -->
          <nav class="desktop-nav flex items-center gap-6">
            <a class="text-gray-700 hover:text-indigo-700 font-medium transition-colors" href="/about-us">About</a>

            <!-- Adopt dropdown -->
            <div class="relative group">
              <a class="text-gray-700 hover:text-orange-600 font-medium transition-colors cursor-pointer" href="/adopt">Adopt</a>
              <div class="absolute left-0 mt-2 w-48 bg-white border border-gray-200 rounded-xl shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                <a href="/adopt" class="block px-4 py-2 hover:bg-orange-50 rounded-t-lg transition-colors">All Animals</a>
                <a href="/adopt/dogs" class="block px-4 py-2 hover:bg-orange-50 transition-colors">Dogs</a>
                <a href="/adopt/cats" class="block px-4 py-2 hover:bg-orange-50 rounded-b-lg transition-colors">Cats</a>
              </div>
            </div>

            <!-- Get Involved dropdown -->
            <div class="relative group">
              <a class="text-gray-700 hover:text-indigo-700 font-medium transition-colors cursor-pointer" href="/get-involved">Get Involved</a>
              <div class="absolute left-0 mt-2 w-48 bg-white border border-gray-200 rounded-xl shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                <a href="/get-involved/volunteer" class="block px-4 py-2 hover:bg-indigo-50 rounded-t-lg transition-colors">Volunteer</a>
                <a href="/get-involved/foster-care" class="block px-4 py-2 hover:bg-indigo-50 transition-colors">Foster Care</a>
                <a href="/get-involved/pet-couriers" class="block px-4 py-2 hover:bg-indigo-50 transition-colors">Pet Couriers</a>
                <a href="/get-involved/fundraise" class="block px-4 py-2 hover:bg-indigo-50 transition-colors">Fundraise</a>
                <a href="/get-involved/bequests" class="block px-4 py-2 hover:bg-indigo-50 rounded-b-lg transition-colors">Bequests</a>
              </div>
            </div>

            <!-- Contact dropdown -->
            <div class="relative group">
              <a class="text-gray-700 hover:text-indigo-700 font-medium transition-colors cursor-pointer" href="/contact-us">Contact</a>
              <div class="absolute left-0 mt-2 w-48 bg-white border border-gray-200 rounded-xl shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                <a href="/contact-us" class="block px-4 py-2 hover:bg-indigo-50 rounded-t-lg transition-colors">Contact Us</a>
                <a href="/contact-us/surrender" class="block px-4 py-2 hover:bg-indigo-50 rounded-b-lg transition-colors">Surrender an Animal</a>
              </div>
            </div>

            <a class="btn btn-accent" href="/donate">
              <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
              </svg>
              Donate
            </a>
          </nav>

          <!-- Mobile Menu Button -->
          <button class="mobile-menu-btn p-2 text-gray-700 hover:text-indigo-700 transition-colors" onclick="toggleMobileMenu()">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <nav class="mobile-nav hidden pb-4 text-sm border-t border-gray-100 mt-2" id="mobile-menu">
          <a href="/about-us" class="block py-3 px-4 hover:bg-indigo-50 transition-colors rounded-lg mt-2">About</a>

          <div class="border-t border-gray-100 mt-2 pt-2">
            <p class="font-semibold py-2 px-4 text-gray-500 text-xs uppercase tracking-wider">Adopt</p>
            <a href="/adopt" class="block py-2 px-4 ml-2 hover:bg-orange-50 transition-colors rounded-lg">All Animals</a>
            <a href="/adopt/dogs" class="block py-2 px-4 ml-2 hover:bg-orange-50 transition-colors rounded-lg">Dogs</a>
            <a href="/adopt/cats" class="block py-2 px-4 ml-2 hover:bg-orange-50 transition-colors rounded-lg">Cats</a>
          </div>

          <div class="border-t border-gray-100 mt-2 pt-2">
            <p class="font-semibold py-2 px-4 text-gray-500 text-xs uppercase tracking-wider">Get Involved</p>
            <a href="/get-involved/volunteer" class="block py-2 px-4 ml-2 hover:bg-indigo-50 transition-colors rounded-lg">Volunteer</a>
            <a href="/get-involved/foster-care" class="block py-2 px-4 ml-2 hover:bg-indigo-50 transition-colors rounded-lg">Foster Care</a>
            <a href="/get-involved/pet-couriers" class="block py-2 px-4 ml-2 hover:bg-indigo-50 transition-colors rounded-lg">Pet Couriers</a>
            <a href="/get-involved/fundraise" class="block py-2 px-4 ml-2 hover:bg-indigo-50 transition-colors rounded-lg">Fundraise</a>
            <a href="/get-involved/bequests" class="block py-2 px-4 ml-2 hover:bg-indigo-50 transition-colors rounded-lg">Bequests</a>
          </div>

          <div class="border-t border-gray-100 mt-2 pt-2">
            <p class="font-semibold py-2 px-4 text-gray-500 text-xs uppercase tracking-wider">Contact</p>
            <a href="/contact-us" class="block py-2 px-4 ml-2 hover:bg-indigo-50 transition-colors rounded-lg">Contact Us</a>
            <a href="/contact-us/surrender" class="block py-2 px-4 ml-2 hover:bg-indigo-50 transition-colors rounded-lg">Surrender an Animal</a>
          </div>

          <div class="mt-4 px-4">
            <a href="/donate" class="btn btn-accent w-full">
              <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
              </svg>
              Donate
            </a>
          </div>
        </nav>
      </div>
    </header>

    <script>
      function toggleMobileMenu() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
      }
    </script>

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>