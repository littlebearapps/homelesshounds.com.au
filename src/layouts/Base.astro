---
import "../styles/global.css";
const { title = "Homeless Hounds", description = "Volunteer-run animal rescue in Victoria" } = Astro.props;
---

<style>
  /* Mobile menu styles */
  @media (max-width: 768px) {
    .desktop-nav {
      display: none;
    }
    .mobile-menu-btn {
      display: block;
    }
  }
  @media (min-width: 769px) {
    .mobile-menu-btn {
      display: none;
    }
    .mobile-nav {
      display: none !important;
    }
  }
</style>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <header class="border-b">
      <div class="mx-auto max-w-5xl px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="font-semibold text-lg">Homeless Hounds</a>
          
          <!-- Desktop Navigation -->
          <nav class="desktop-nav flex gap-6 text-sm">
            <a class="hover:underline" href="/about-us">About</a>
            
            <!-- Adopt dropdown -->
            <div class="relative group">
              <a class="hover:underline cursor-pointer" href="/adopt">Adopt</a>
              <div class="absolute left-0 mt-1 w-48 bg-white border rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                <a href="/adopt" class="block px-4 py-2 hover:bg-gray-50">All Animals</a>
                <a href="/adopt/dogs" class="block px-4 py-2 hover:bg-gray-50">Dogs</a>
                <a href="/adopt/cats" class="block px-4 py-2 hover:bg-gray-50">Cats</a>
              </div>
            </div>
            
            <!-- Get Involved dropdown -->
            <div class="relative group">
              <a class="hover:underline cursor-pointer" href="/get-involved">Get Involved</a>
              <div class="absolute left-0 mt-1 w-48 bg-white border rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                <a href="/get-involved/volunteer" class="block px-4 py-2 hover:bg-gray-50">Volunteer</a>
                <a href="/get-involved/foster-care" class="block px-4 py-2 hover:bg-gray-50">Foster Care</a>
                <a href="/get-involved/pet-couriers" class="block px-4 py-2 hover:bg-gray-50">Pet Couriers</a>
                <a href="/get-involved/fundraise" class="block px-4 py-2 hover:bg-gray-50">Fundraise</a>
                <a href="/get-involved/bequests" class="block px-4 py-2 hover:bg-gray-50">Bequests</a>
                <a href="/get-involved/goodwill-wines" class="block px-4 py-2 hover:bg-gray-50">Goodwill Wines</a>
              </div>
            </div>
            
            <!-- Contact dropdown -->
            <div class="relative group">
              <a class="hover:underline cursor-pointer" href="/contact-us">Contact</a>
              <div class="absolute left-0 mt-1 w-48 bg-white border rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-10">
                <a href="/contact-us" class="block px-4 py-2 hover:bg-gray-50">Contact Us</a>
                <a href="/contact-us/surrender" class="block px-4 py-2 hover:bg-gray-50">Surrender an Animal</a>
              </div>
            </div>
            
            <a class="hover:underline" href="/donate">Donate</a>
          </nav>
          
          <!-- Mobile Menu Button -->
          <button class="mobile-menu-btn p-2" onclick="toggleMobileMenu()">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
        
        <!-- Mobile Navigation -->
        <nav class="mobile-nav hidden mt-4 pb-4 text-sm" id="mobile-menu">
          <a href="/about-us" class="block py-2 hover:bg-gray-50">About</a>
          
          <div class="border-t mt-2 pt-2">
            <p class="font-semibold py-2">Adopt</p>
            <a href="/adopt" class="block py-2 pl-4 hover:bg-gray-50">All Animals</a>
            <a href="/adopt/dogs" class="block py-2 pl-4 hover:bg-gray-50">Dogs</a>
            <a href="/adopt/cats" class="block py-2 pl-4 hover:bg-gray-50">Cats</a>
          </div>
          
          <div class="border-t mt-2 pt-2">
            <p class="font-semibold py-2">Get Involved</p>
            <a href="/get-involved/volunteer" class="block py-2 pl-4 hover:bg-gray-50">Volunteer</a>
            <a href="/get-involved/foster-care" class="block py-2 pl-4 hover:bg-gray-50">Foster Care</a>
            <a href="/get-involved/pet-couriers" class="block py-2 pl-4 hover:bg-gray-50">Pet Couriers</a>
            <a href="/get-involved/fundraise" class="block py-2 pl-4 hover:bg-gray-50">Fundraise</a>
            <a href="/get-involved/bequests" class="block py-2 pl-4 hover:bg-gray-50">Bequests</a>
            <a href="/get-involved/goodwill-wines" class="block py-2 pl-4 hover:bg-gray-50">Goodwill Wines</a>
          </div>
          
          <div class="border-t mt-2 pt-2">
            <p class="font-semibold py-2">Contact</p>
            <a href="/contact-us" class="block py-2 pl-4 hover:bg-gray-50">Contact Us</a>
            <a href="/contact-us/surrender" class="block py-2 pl-4 hover:bg-gray-50">Surrender an Animal</a>
          </div>
          
          <a href="/donate" class="block py-2 mt-2 border-t pt-4 font-semibold text-black">Donate</a>
        </nav>
      </div>
    </header>
    
    <script>
      function toggleMobileMenu() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
      }
    </script>
    <main class="mx-auto max-w-5xl px-6 py-10">
      <slot />
    </main>
    <footer class="mt-16 border-t">
      <div class="mx-auto max-w-5xl px-6 py-8 text-sm text-gray-600">
        © {new Date().getFullYear()} Homeless Hounds • ABN/Charity details here
      </div>
    </footer>
  </body>
</html>