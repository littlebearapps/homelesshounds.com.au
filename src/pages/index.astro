---
export const prerender = false;

import Base from "../layouts/Base.astro";
import AnimalCard from "../components/AnimalCard.astro";
import type { AdoptableAnimalsResponse } from "../types/asm";

// Fetch adoptable animals from our API
let animalsData: AdoptableAnimalsResponse | null = null;
let error: string | null = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/asm/adoptable?species=all&limit=8`);
  if (!response.ok) {
    throw new Error(`API returned ${response.status}`);
  }
  animalsData = await response.json();
} catch (e) {
  console.error('Error fetching animals:', e);
  error = e instanceof Error ? e.message : 'Failed to fetch animals';
}

const animals = animalsData?.animals || [];

// Statistics data
const stats = {
  animalsRescued: '400+',
  activeFosters: '50+',
  adoptions: '300+',
  volunteers: '100+'
};

// Real partner names from WordPress site
const partners = [
  'Toorak Road Veterinary Clinic',
  'Heathmont Animal Hospital',
  'Pet Circle',
  'Pro Dog Training',
  'Pointon Partners Lawyers'
];
---

<Base title="Homeless Hounds Animal Rescue | Rescue Dogs and Cats Love You More">
  <!-- Hero Section - Full Width with Image Background -->
  <section class="relative isolate overflow-hidden bg-white min-h-[70vh] flex items-center">
    <div class="absolute inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-purple-900/90 via-purple-700/80 to-teal-600/70"></div>
    </div>
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>

    <div class="container-custom py-24 md:py-32 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-purple-200 text-sm uppercase tracking-widest font-semibold mb-4">Every tail deserves a happy ending</p>
        <h1 class="text-white mb-6">
          Find Your
          <span class="text-gradient block mt-2">Forever Friend</span>
        </h1>
        <p class="text-xl md:text-2xl text-white/90 mb-10 max-w-3xl mx-auto">
          Homeless Hounds rescues, rehabilitates and rehomes dogs, cats and other animals in need across Victoria
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/adopt" class="btn btn-white">
            View Adoptable Pets
          </a>
          <a href="https://donate.homelesshounds.com.au" target="_blank" class="btn btn-accent">
            Donate Now
          </a>
          <a href="/get-involved/volunteer" class="btn btn-ghost text-white hover:bg-white/10">
            Volunteer
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission Cards - Boxed Container with Full-Width Background -->
  <section class="section bg-gradient-to-b from-gray-50 via-white to-gray-50">
    <div class="container-custom">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Adopt Card -->
        <article class="card group">
          <div class="relative h-32 bg-gradient-to-br from-purple-500 to-purple-700 flex items-center justify-center">
            <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
          </div>
          <div class="card-body">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Adopt</h3>
            <p class="text-gray-600 mb-4">
              Visit with our rescue animals ready for adoption. Find your perfect match today!
            </p>
            <a href="/adopt" class="inline-flex items-center text-purple-600 font-semibold hover:text-purple-700 group-hover:translate-x-1 transition-transform">
              Learn More
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>

        <!-- Foster Card -->
        <article class="card group">
          <div class="relative h-32 bg-gradient-to-br from-teal-500 to-teal-700 flex items-center justify-center">
            <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="card-body">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Foster</h3>
            <p class="text-gray-600 mb-4">
              Without fostering, there can be no rescue. Help us save over 400 animals yearly.
            </p>
            <a href="/get-involved/foster-care" class="inline-flex items-center text-teal-600 font-semibold hover:text-teal-700 group-hover:translate-x-1 transition-transform">
              Learn More
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>

        <!-- Donate Card -->
        <article class="card group">
          <div class="relative h-32 bg-gradient-to-br from-orange-500 to-orange-700 flex items-center justify-center">
            <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
              <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="card-body">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Donate</h3>
            <p class="text-gray-600 mb-4">
              Every little bit counts! Your generous donation helps animals most in need.
            </p>
            <a href="https://donate.homelesshounds.com.au" target="_blank" class="inline-flex items-center text-orange-600 font-semibold hover:text-orange-700 group-hover:translate-x-1 transition-transform">
              Learn More
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>

        <!-- Volunteer Card -->
        <article class="card group">
          <div class="relative h-32 bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center">
            <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
            </svg>
          </div>
          <div class="card-body">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Volunteer</h3>
            <p class="text-gray-600 mb-4">
              Join our dedicated team of volunteers in a variety of roles that help save lives.
            </p>
            <a href="/get-involved/volunteer" class="inline-flex items-center text-purple-600 font-semibold hover:text-purple-700 group-hover:translate-x-1 transition-transform">
              Learn More
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Adoptable Pets Section - Mixed Width -->
  <section class="section">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="mb-4">Looking to Adopt?</h2>
        <p class="text-xl text-gray-600">View all of our rescue animals that are ready for adoption!</p>
      </div>

      {animals.length > 0 ? (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {animals.slice(0, 8).map((animal) => {
            const imageUrl = animal.WEBSITEIMAGECOUNT > 0 && animal.WEBSITEMEDIANAME
              ? `https://service.sheltermanager.com/asmservice?method=animal_image&account=st3418&animalid=${animal.ID}`
              : '/hh-logo.png';

            return (
              <article class="card group">
                <div class="relative h-64 overflow-hidden bg-gray-100">
                  <img
                    src={imageUrl}
                    alt={animal.ANIMALNAME}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                  />
                  {animal.SPECIESNAME && (
                    <span class="chip chip-info absolute top-3 right-3">
                      {animal.SPECIESNAME}
                    </span>
                  )}
                </div>
                <div class="card-body">
                  <h3 class="text-xl font-bold text-gray-900 mb-1">{animal.ANIMALNAME}</h3>
                  <p class="text-sm text-gray-600 mb-3">
                    {animal.BREEDNAME || 'Unknown Breed'} ‚Ä¢ {animal.AGEGROUP || 'Unknown Age'}
                  </p>
                  <a
                    href={`/pets/${animal.SPECIESNAME?.toLowerCase() || 'other'}/${animal.ID}`}
                    class="inline-flex items-center text-purple-600 font-semibold hover:text-purple-700 group-hover:translate-x-1 transition-transform"
                  >
                    Meet {animal.ANIMALNAME}
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </article>
            );
          })}
        </div>
      ) : (
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {[1, 2, 3, 4].map(() => (
            <div class="card">
              <div class="h-64 bg-gray-200 animate-pulse"></div>
              <div class="card-body">
                <div class="h-6 bg-gray-200 rounded animate-pulse mb-2"></div>
                <div class="h-4 bg-gray-200 rounded animate-pulse w-3/4"></div>
              </div>
            </div>
          ))}
        </div>
      )}

      <div class="mt-12 text-center">
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <span class="text-lg font-semibold text-gray-700">Meet:</span>
          <div class="flex flex-wrap gap-3 justify-center">
            <a href="/adopt" class="btn btn-primary">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
              </svg>
              All Animals
            </a>
            <a href="/adopt/dogs" class="btn btn-secondary">
              üêï Dogs
            </a>
            <a href="/adopt/cats" class="btn btn-ghost">
              üê± Cats
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section - Full Width -->
  <section class="relative bg-gradient-to-r from-purple-700 via-purple-600 to-teal-600 text-white">
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
    <div class="container-custom section relative z-10">
      <h2 class="text-white text-center mb-12">Our Impact</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-5xl font-bold mb-2">{stats.animalsRescued}</div>
          <p class="text-xl opacity-90">Animals Rescued Yearly</p>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold mb-2">{stats.activeFosters}</div>
          <p class="text-xl opacity-90">Active Foster Carers</p>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold mb-2">{stats.adoptions}</div>
          <p class="text-xl opacity-90">Successful Adoptions</p>
        </div>
        <div class="text-center">
          <div class="text-5xl font-bold mb-2">{stats.volunteers}</div>
          <p class="text-xl opacity-90">Dedicated Volunteers</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Partners Section - Boxed -->
  <section class="section section-muted">
    <div class="container-custom">
      <h3 class="text-center mb-12">
        Thank you to our partners whose support makes our work possible
      </h3>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
        {partners.map((partner) => (
          <div class="bg-white rounded-xl p-6 shadow-soft hover:shadow-lg transition-all duration-300 flex items-center justify-center min-h-[120px]">
            <p class="text-gray-700 font-semibold text-center">{partner}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Call to Action - Full Width -->
  <section class="relative bg-gradient-to-br from-purple-900 via-purple-700 to-teal-700">
    <div class="absolute inset-0 bg-pattern-dots opacity-5"></div>
    <div class="container-custom section relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-white mb-6">
          Ready to Make a Difference?
        </h2>
        <p class="text-xl text-white/90 mb-10">
          Whether you adopt, foster, volunteer, or donate, every action helps us save more lives.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/adopt" class="btn btn-white">
            Adopt a Pet
          </a>
          <a href="/get-involved/foster-care" class="btn btn-secondary">
            Foster Care
          </a>
          <a href="https://donate.homelesshounds.com.au" target="_blank" class="btn btn-accent">
            Donate Now
          </a>
        </div>
      </div>
    </div>
  </section>
</Base>