    <!-- Looking to Adopt Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Looking to Adopt?</h2>
          <p class="text-xl text-gray-600">View all of our rescue animals that are ready for adoption!</p>
        </div>

        {animals.length > 0 ? (
          <div class="adoption-carousel relative">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" id="adoption-grid">
              {animals.slice(0, 8).map((animal) => {
                // Construct the image URL using the ASM media endpoint
                const imageUrl = animal.WEBSITEIMAGECOUNT > 0 && animal.WEBSITEMEDIANAME
                  ? `https://service.sheltermanager.com/asmservice?method=animal_image&account=st3418&animalid=${animal.ID}`
                  : '/hh-logo.png';

                return (
                  <div class="group relative overflow-hidden rounded-xl bg-white shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
                    <div class="aspect-w-4 aspect-h-3 relative overflow-hidden bg-gray-100" style="height: 280px">
                      <img
                        src={imageUrl}
                        alt={animal.ANIMALNAME}
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                        loading="lazy"
                      />
                      {animal.SPECIESNAME && (
                        <span class="absolute top-3 right-3 bg-white/90 backdrop-blur text-purple-700 text-xs font-bold px-3 py-1 rounded-full shadow-md">
                          {animal.SPECIESNAME}
                        </span>
                      )}
                    </div>
                    <div class="p-4">
                      <h3 class="text-xl font-bold text-gray-900 mb-1">{animal.ANIMALNAME}</h3>
                      <p class="text-sm text-gray-600 mb-3">
                        {animal.BREEDNAME || 'Unknown Breed'} ‚Ä¢ {animal.AGEGROUP || 'Unknown Age'} ‚Ä¢ {animal.SEXNAME || 'Unknown'}
                      </p>
                      <a
                        href={`/pets/${animal.SPECIESNAME?.toLowerCase() || 'other'}/${animal.ID}`}
                        class="inline-flex items-center text-purple-600 font-semibold hover:text-purple-700"
                      >
                        Meet {animal.ANIMALNAME}
