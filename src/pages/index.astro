    <section class="py-20 bg-gradient-to-r from-purple-600 to-pink-600 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl font-bold text-center mb-12">Our Impact</h2>
        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-5xl font-bold mb-2">{stats.animalsRescued}</div>
            <p class="text-xl opacity-90">Animals Rescued Yearly</p>
