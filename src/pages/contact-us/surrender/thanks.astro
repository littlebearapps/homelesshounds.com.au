---
import Layout from '../../../layouts/Layout.astro';

// Get the URL for server-side processing
const url = new URL(Astro.request.url);
---

<Layout title="Surrender Request Received | Homeless Hounds">
  <main class="min-h-screen bg-gradient-to-b from-orange-50 to-white py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <!-- Success Animation -->
      <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Surrender Request Received</h1>
        <p class="text-lg text-gray-600" id="personalGreeting">Thank you for reaching out to us</p>
      </div>

      <!-- Application Details Card -->
      <div class="bg-white shadow-xl rounded-lg overflow-hidden mb-8">
        <div class="bg-orange-600 text-white px-6 py-4">
          <h2 class="text-xl font-semibold">What Happens Next?</h2>
        </div>

        <div class="p-6 space-y-6">
          <!-- Compassionate Message -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-gray-700 leading-relaxed">
                  We understand that this is a difficult decision and we're here to help.
                  Our team will review your surrender request with care and compassion,
                  working to find the best possible outcome for your pet.
                </p>
              </div>
            </div>
          </div>

          <!-- Pet Details (will be populated by JavaScript if available) -->
          <div id="petDetails" class="hidden">
            <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
              <p class="font-semibold text-gray-900 mb-2">Pet Information Provided:</p>
              <div>
                <p class="text-gray-700">
                  <span class="font-medium">Pet Name:</span>
                  <span id="petName"></span>
                </p>
                <p class="text-gray-700">
                  <span class="font-medium">Species:</span>
                  <span id="petSpecies"></span>
                </p>
                <p class="text-gray-700">
                  <span class="font-medium">Breed:</span>
                  <span id="petBreed"></span>
                </p>
              </div>
            </div>
          </div>

          <!-- Owner Details (will be populated by JavaScript) -->
          <div id="ownerDetails" class="hidden">
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
              <p class="font-semibold text-gray-900 mb-2">Your Contact Information:</p>
              <p class="text-gray-700">
                <span class="font-medium">Name:</span>
                <span id="ownerName"></span>
              </p>
              <p class="text-gray-700">
                <span class="font-medium">Email:</span>
                <span id="ownerEmail"></span>
              </p>
              <p class="text-gray-700">
                <span class="font-medium">Phone:</span>
                <span id="ownerPhone"></span>
              </p>
            </div>
          </div>

          <!-- Timeline -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Surrender Process Timeline</h3>
            <ol class="relative border-l border-gray-200 ml-3">
              <li class="mb-6 ml-6">
                <span class="absolute flex items-center justify-center w-6 h-6 bg-green-600 rounded-full -left-3">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </span>
                <h4 class="font-medium text-gray-900">Request Received</h4>
                <p class="text-sm text-gray-600">Your surrender request has been successfully submitted</p>
              </li>
              <li class="mb-6 ml-6">
                <span class="absolute flex items-center justify-center w-6 h-6 bg-gray-300 rounded-full -left-3">
                  <span class="text-white text-xs">2</span>
                </span>
                <h4 class="font-medium text-gray-900">Initial Assessment</h4>
                <p class="text-sm text-gray-600">Our team will review your request within 24-48 hours</p>
              </li>
              <li class="mb-6 ml-6">
                <span class="absolute flex items-center justify-center w-6 h-6 bg-gray-300 rounded-full -left-3">
                  <span class="text-white text-xs">3</span>
                </span>
                <h4 class="font-medium text-gray-900">Contact & Discussion</h4>
                <p class="text-sm text-gray-600">We'll contact you to discuss options and next steps</p>
              </li>
              <li class="mb-6 ml-6">
                <span class="absolute flex items-center justify-center w-6 h-6 bg-gray-300 rounded-full -left-3">
                  <span class="text-white text-xs">4</span>
                </span>
                <h4 class="font-medium text-gray-900">Health & Behavior Assessment</h4>
                <p class="text-sm text-gray-600">If accepted, we'll assess your pet's needs for rehoming</p>
              </li>
              <li class="ml-6">
                <span class="absolute flex items-center justify-center w-6 h-6 bg-gray-300 rounded-full -left-3">
                  <span class="text-white text-xs">5</span>
                </span>
                <h4 class="font-medium text-gray-900">Finding the Right Home</h4>
                <p class="text-sm text-gray-600">We'll work to match your pet with a suitable new family</p>
              </li>
            </ol>
          </div>

          <!-- Support Information -->
          <div class="bg-indigo-50 border border-indigo-300 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Support & Resources</h3>
            <p class="text-gray-700 mb-3">
              If your circumstances change or you need immediate assistance, please don't hesitate to contact us.
              We may be able to provide resources or alternatives to surrendering your pet.
            </p>
            <ul class="space-y-2 text-gray-700">
              <li class="flex items-start">
                <span class="text-indigo-700 mr-2">•</span>
                <span>Temporary foster care may be available in emergency situations</span>
              </li>
              <li class="flex items-start">
                <span class="text-indigo-700 mr-2">•</span>
                <span>We can provide behavioral support and training resources</span>
              </li>
              <li class="flex items-start">
                <span class="text-indigo-700 mr-2">•</span>
                <span>Financial assistance programs may be available for veterinary care</span>
              </li>
            </ul>
          </div>

          <!-- Important Information -->
          <div class="bg-amber-50 border border-amber-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-amber-900">Please Note</h3>
                <div class="mt-2 text-sm text-amber-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <li>We will contact you within 24-48 hours</li>
                    <li>Please check your spam folder for our emails</li>
                    <li>Acceptance depends on our current capacity and resources</li>
                    <li>We prioritize Victorian residents but may help interstate cases</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/resources" class="inline-flex justify-center items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
          Pet Care Resources
        </a>
        <a href="/" class="inline-flex justify-center items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500">
          Return to Homepage
        </a>
      </div>
    </div>
  </main>

  <script>
    // Retrieve and display form data from session storage
    document.addEventListener('DOMContentLoaded', function() {
      const formData = sessionStorage.getItem('surrenderFormData');

      if (formData) {
        try {
          const data = JSON.parse(formData);

          // Add personalized greeting if name is available
          const personalGreeting = document.getElementById('personalGreeting');
          if (personalGreeting && data.firstname) {
            personalGreeting.textContent = `Thank you, ${data.firstname}. We've received your surrender request.`;
          }

          // Display pet details if available
          const petDetails = document.getElementById('petDetails');
          if (petDetails && (data.animalname || data.species || data.breed)) {
            const petName = document.getElementById('petName');
            const petSpecies = document.getElementById('petSpecies');
            const petBreed = document.getElementById('petBreed');

            if (petName && data.animalname) {
              petName.textContent = data.animalname;
            }
            if (petSpecies && data.species) {
              petSpecies.textContent = data.species;
            }
            if (petBreed && data.breed) {
              petBreed.textContent = data.breed;
            }
            petDetails.classList.remove('hidden');
          }

          // Display owner details if available
          const ownerDetails = document.getElementById('ownerDetails');
          const ownerName = document.getElementById('ownerName');
          const ownerEmail = document.getElementById('ownerEmail');
          const ownerPhone = document.getElementById('ownerPhone');

          if (ownerDetails && (data.firstname || data.lastname || data.email || data.cellphone)) {
            if (ownerName && (data.firstname || data.lastname)) {
              ownerName.textContent = `${data.firstname || ''} ${data.lastname || ''}`.trim();
            }
            if (ownerEmail && data.email) {
              ownerEmail.textContent = data.email;
            }
            if (ownerPhone && data.cellphone) {
              ownerPhone.textContent = data.cellphone;
            }
            ownerDetails.classList.remove('hidden');
          }

          // Clear the session storage after displaying
          // Comment this out if you want to preserve data for debugging
          // sessionStorage.removeItem('surrenderFormData');

        } catch (error) {
          console.error('Error parsing form data:', error);
        }
      }

      // Add animation to timeline items on scroll
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateX(0)';
          }
        });
      });

      document.querySelectorAll('ol li').forEach((item) => {
        item.style.opacity = '0';
        item.style.transform = 'translateX(-20px)';
        item.style.transition = 'all 0.5s ease-out';
        observer.observe(item);
      });
    });
  </script>
</Layout>