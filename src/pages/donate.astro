---
import Base from "../layouts/Base.astro";

const SUBDOMAIN_RAW = import.meta.env.RAISELY_CAMPAIGN_SUBDOMAIN;

// Handle different subdomain formats:
// 1. Just subdomain: "donate-homelesshounds"
// 2. Full Raisely URL: "https://donate-homelesshounds.raisely.com"
// 3. Custom domain: "https://donate.homelesshounds.com.au"
let embedSrc = null;
let SUBDOMAIN = null;

if (SUBDOMAIN_RAW) {
  if (SUBDOMAIN_RAW.includes('raisely.com') || SUBDOMAIN_RAW.includes('raiselysite.com')) {
    // Extract subdomain from Raisely URL (both .raisely.com and .raiselysite.com)
    const match = SUBDOMAIN_RAW.match(/https?:\/\/([^.]+)\.raisely(?:site)?\.com/);
    SUBDOMAIN = match ? match[1] : null;
  } else if (SUBDOMAIN_RAW.startsWith('http')) {
    // Custom domain - use as external link (no embed)
    SUBDOMAIN = null;
  } else {
    // Plain subdomain
    SUBDOMAIN = SUBDOMAIN_RAW;
  }
}

// Optional prefill: /donate?amount=50 (startOnAmount=true moves the user straight to amounts)
const url = new URL(Astro.request.url);
const amount = url.searchParams.get('amount');
const startOnAmount = url.searchParams.get('startOnAmount') ?? 'true';

// Only create embed URL if we have a valid Raisely subdomain
if (SUBDOMAIN && SUBDOMAIN !== 'YOUR-CAMPAIGN-SUBDOMAIN') {
  // Build URL with optimisation parameters
  const params = new URLSearchParams();

  // Amount prefilling
  if (amount) {
    params.set('amount', amount);
    if (startOnAmount) params.set('startOnAmount', startOnAmount);
  }

  // Try various Raisely parameters for better integration
  params.set('embedded', 'true');           // Tell Raisely this is embedded
  params.set('theme', 'minimal');           // Request minimal theme
  params.set('hideHeader', 'true');         // Try to hide header
  params.set('hideFooter', 'true');         // Try to hide footer
  params.set('compact', 'true');            // Request compact layout
  params.set('seamless', 'true');           // Request seamless mode
  params.set('iframe', 'true');             // Iframe mode
  params.set('widget', 'true');             // Widget mode
  params.set('minimal', 'true');            // Another minimal flag
  params.set('bare', 'true');               // Bare mode
  params.set('clean', 'true');              // Clean layout
  params.set('simple', 'true');             // Simple mode
  params.set('embed', 'true');              // Embed flag

  const path = `/embed?${params.toString()}`;
  embedSrc = `https://${SUBDOMAIN}.raisely.com${path}`;
}

// Fallback external donation URL - use custom domain if provided, otherwise default
const externalDonateUrl = (SUBDOMAIN_RAW && SUBDOMAIN_RAW.startsWith('http'))
  ? SUBDOMAIN_RAW
  : "https://donate.homelesshounds.com.au";
---

<Base title="Donate to Homeless Hounds" description="Your gift funds rescue, vet care, and rehoming for homeless animals.">
  <div class="container-custom py-16">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Help Save Lives
        </h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Your donation funds rescue operations, veterinary care, and helps find loving homes for animals in need.
        </p>
      </div>

      {embedSrc ? (
        <!-- Enhanced Embedded Raisely Form -->
        <div class="relative mb-8">
          <!-- Decorative background elements -->
          <div class="absolute inset-0 bg-gradient-to-br from-orange-50 via-blue-50 to-teal-50 rounded-3xl transform rotate-1"></div>
          <div class="absolute inset-0 bg-gradient-to-tl from-orange-100 via-white to-blue-100 rounded-3xl transform -rotate-1"></div>

          <!-- Main donation form container -->
          <div class="relative bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100">
            <!-- Header section with gradient -->
            <div class="bg-gradient-to-r from-orange-500 via-orange-600 to-orange-700 px-8 py-6">
              <div class="flex items-center justify-center space-x-3">
                <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center">
