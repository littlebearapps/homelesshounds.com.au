                  </svg>
                </div>
                <h2 class="text-2xl font-bold text-white">Make a Donation</h2>
                <div class="w-8 h-8 bg-white rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                  </svg>
                </div>
              </div>
              <p class="text-center text-orange-100 mt-2 text-sm font-medium">
                Every dollar helps save a life
              </p>
            </div>

            <!-- Loading state -->
            <div id="donation-loading" class="absolute inset-0 bg-white bg-opacity-90 flex items-center justify-center z-10 transition-opacity duration-500">
              <div class="text-center">
                <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-orange-600 mx-auto mb-4"></div>
                <p class="text-gray-600 font-medium">Loading donation form...</p>
              </div>
            </div>

            <!-- Aggressively optimised iframe container -->
            <div class="relative bg-white overflow-hidden rounded-b-3xl iframe-container">
              <!-- CSS to crop whitespace on all sides -->
              <style>
                #raisely-iframe {
                  /* Crop whitespace by scaling and positioning */
                  transform: scale(1.25) translate(-15px, -60px);
                  transform-origin: center top;
                  width: calc(100% + 30px);
                  margin-left: -15px;
                  margin-right: -15px;
                }

                /* Container to ensure proper clipping */
                .iframe-container {
                  padding: 0 15px;
                  margin: 0 -15px;
                  overflow: hidden;
                }

                /* Try to hide scrollbars and optimise display */
                #raisely-iframe::-webkit-scrollbar {
                  display: none;
                }

                /* Responsive adjustments */
                @media (max-width: 768px) {
                  #raisely-iframe {
                    transform: scale(1.3) translate(-20px, -50px);
                    width: calc(100% + 40px);
                    margin-left: -20px;
                    margin-right: -20px;
                  }
                  .iframe-container {
                    padding: 0 20px;
                    margin: 0 -20px;
                  }
                }
              </style>

              <iframe
                id="raisely-iframe"
                src={embedSrc}
                width="100%"
                height="700"
                style="border:0; background: white; min-height: 500px; margin-bottom: -100px;"
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Donation Form"
                scrolling="no"
                frameborder="0"
                allow="payment"
                onload="
                  // Hide loading state
                  document.getElementById('donation-loading').style.opacity = '0';
                  setTimeout(() => document.getElementById('donation-loading').style.display = 'none', 500);

                  // Auto-resize iframe height based on content
                  const iframe = this;

                  // Listen for postMessage from iframe to adjust height
                  window.addEventListener('message', function(event) {
                    if (event.origin.includes('raisely.com')) {
                      if (event.data.type === 'resize' && event.data.height) {
                        iframe.style.height = Math.max(400, event.data.height) + 'px';
                      }
                      // Handle various Raisely resize messages
                      if (event.data.raiselyHeight) {
                        iframe.style.height = Math.max(400, event.data.raiselyHeight) + 'px';
                      }
                      if (event.data.height && !event.data.type) {
                        iframe.style.height = Math.max(400, event.data.height) + 'px';
                      }
                    }
                  });

                  // Fallback: Try to detect content height after load
                  setTimeout(() => {
                    try {
                      const iframeDoc = iframe.contentDocument || iframe.contentWindow.document;
                      if (iframeDoc && iframeDoc.body) {
                        const height = Math.max(
                          iframeDoc.body.scrollHeight,
                          iframeDoc.body.offsetHeight,
                          iframeDoc.documentElement.clientHeight,
                          iframeDoc.documentElement.scrollHeight,
                          iframeDoc.documentElement.offsetHeight
                        );
                        if (height > 200) {
                          iframe.style.height = Math.max(400, height + 40) + 'px';
                        }
                      }
                    } catch(e) {
                      // CORS prevents access, use default height
                      console.log('Using default iframe height due to CORS policy');
                    }
                  }, 1000);
                "
                class="transition-all duration-500 ease-in-out w-full"
              ></iframe>
            </div>

            <!-- Security badges -->
            <div class="bg-gray-50 border-t border-gray-200 px-8 py-4">
              <div class="flex items-center justify-center space-x-6 text-sm text-gray-600">
                <div class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                  </svg>
