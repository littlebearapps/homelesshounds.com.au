                <div class="flex items-center space-x-2">
                  <svg class="w-4 h-4 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z" />
                    <path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd" />
                  </svg>
                  <span class="font-medium">PCI Compliant</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      ) : (
        <!-- Fallback - External Link -->
        <div class="bg-gradient-to-br from-blue-50 to-teal-50 rounded-2xl p-8 text-center mb-8">
          <div class="max-w-2xl mx-auto">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">
              Support Our Mission
            </h2>
            <p class="text-gray-700 mb-6">
              Every donation helps us rescue, rehabilitate, and rehome animals in need. Your support makes a real difference.
            </p>
            <a
              href={externalDonateUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-8 py-4 bg-orange-600 text-white rounded-xl hover:bg-orange-700 font-semibold text-lg transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-1"
            >
              <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
              </svg>
              Donate Now
            </a>
          </div>
        </div>
      )}

      <!-- Enhanced Impact Information -->
      <div class="mb-12">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Your Impact in Numbers</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
