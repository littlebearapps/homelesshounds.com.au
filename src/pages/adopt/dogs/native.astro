---
import Base from "../../../layouts/Base.astro";
import AnimalCard from "../../../components/AnimalCard.astro";
import AnimalFilters from "../../../components/AnimalFilters.astro";
import type { AdoptableAnimalsResponse } from "../../../types/asm";

// Fetch dogs from our API
let animalsData: AdoptableAnimalsResponse | null = null;
let error: string | null = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/asm/adoptable?species=dog&limit=100`);
  if (!response.ok) {
    throw new Error(`API returned ${response.status}`);
  }
  animalsData = await response.json();
} catch (e) {
  console.error('Error fetching dogs:', e);
  error = e instanceof Error ? e.message : 'Failed to fetch dogs';
}

const animals = animalsData?.animals || [];
const total = animalsData?.total || 0;

// Get current filters from URL (excluding species since this is dogs-only)
const url = new URL(Astro.request.url);
const currentFilters = {
  species: 'dog', // Fixed for this page
  agegroup: url.searchParams.get('agegroup') || undefined,
  size: url.searchParams.get('size') || undefined,
  sex: url.searchParams.get('sex') || undefined,
  goodWith: url.searchParams.get('goodWith') || undefined,
};
---

<Base title="Dogs for Adoption - Native">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-100 to-indigo-100 rounded-full mb-6">
        <span class="text-4xl">üêï</span>
      </div>
      <h1 class="text-5xl font-bold text-gray-900 mb-6">
        Find Your Perfect 
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600">
          Dog Companion
        </span>
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        All our dogs are health checked, vaccinated, microchipped, and desexed (if age appropriate). 
        Each one is ready to become a beloved member of your family.
      </p>
    </div>

    <!-- Navigation -->
    <div class="flex justify-center gap-4 mb-8">
      <a href="/adopt" class="inline-flex items-center px-6 py-3 bg-gray-100 text-gray-700 rounded-xl hover:bg-gray-200 transition-colors text-base font-semibold">
        üè† All Animals
      </a>
      <a href="/adopt/dogs" class="inline-flex items-center px-6 py-3 bg-blue-100 text-blue-700 rounded-xl hover:bg-blue-200 transition-colors text-base font-semibold shadow-sm">
        üêï Dogs
      </a>
      <a href="/adopt/cats" class="inline-flex items-center px-6 py-3 bg-amber-50 text-amber-700 rounded-xl hover:bg-amber-100 transition-colors text-base font-semibold">
        üê± Cats
      </a>
    </div>

    <!-- Filters (no species filter since this is dogs-only) -->
    <AnimalFilters currentFilters={currentFilters} showSpeciesFilter={false} />

    <!-- Error State -->
    {error && (
      <div class="text-center py-16">
        <div class="bg-red-50 border-2 border-red-200 rounded-xl p-8 max-w-lg mx-auto">
          <div class="text-red-600 mb-4">
            <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-red-800 mb-2">Unable to Load Dogs</h3>
          <p class="text-red-700 text-sm mb-4">We're having trouble connecting to our animal database.</p>
          <p class="text-red-600 text-xs">{error}</p>
          <button 
            onclick="window.location.reload()" 
            class="mt-4 px-4 py-2 bg-red-100 hover:bg-red-200 text-red-800 rounded-lg font-medium transition-colors"
          >
            Try Again
          </button>
        </div>
      </div>
    )}

    <!-- Dogs Grid -->
    {!error && animals.length > 0 && (
      <>
        <div class="animals-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          {animals.map((animal) => (
            <AnimalCard 
              animal={animal} 
              showBadges={true} 
              lazyLoad={true}
            />
          ))}
        </div>

        <!-- Stats -->
        <div class="text-center py-8 border-t border-gray-200">
          <p class="text-gray-600">
            Showing <span class="font-semibold text-blue-600">{animals.length}</span> adorable dogs 
            looking for their forever homes
          </p>
        </div>
      </>
    )}

    <!-- Empty State -->
    {!error && animals.length === 0 && (
      <div class="text-center py-16">
        <div class="bg-gray-50 border-2 border-dashed border-gray-300 rounded-xl p-12 max-w-lg mx-auto">
          <div class="text-gray-400 mb-4">
            <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2M4 13h2m13-8L9 9l4 4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-700 mb-2">No Dogs Currently Available</h3>
          <p class="text-gray-600 mb-4">All our dogs have found homes! Check back soon for new arrivals.</p>
          <a 
            href="/contact-us" 
            class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium transition-colors"
          >
            Contact us for updates
          </a>
        </div>
      </div>
    )}

    <!-- Information Cards -->
    <div class="mt-20 grid md:grid-cols-2 gap-8">
      <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-blue-900 mb-4 flex items-center">
          <span class="text-3xl mr-3">üêï</span>
          Dog Care Essentials
        </h3>
        <ul class="space-y-3 text-blue-800">
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">‚Ä¢</span>
            High-quality dog food appropriate for age and size
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">‚Ä¢</span>
            Collar with ID tag and sturdy leash
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">‚Ä¢</span>
            Comfortable bed and blankets
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">‚Ä¢</span>
            Appropriate toys and chew items
          </li>
          <li class="flex items-start">
            <span class="text-blue-600 mr-2">‚Ä¢</span>
            Regular exercise and mental stimulation
          </li>
        </ul>
      </div>
      
      <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-green-900 mb-4 flex items-center">
          <span class="text-3xl mr-3">üè°</span>
          Preparing Your Home
        </h3>
        <ul class="space-y-3 text-green-800">
          <li class="flex items-start">
            <span class="text-green-600 mr-2">‚Ä¢</span>
            Secure fencing appropriate for dog's size
          </li>
          <li class="flex items-start">
            <span class="text-green-600 mr-2">‚Ä¢</span>
            Remove or secure hazardous items and plants
          </li>
          <li class="flex items-start">
            <span class="text-green-600 mr-2">‚Ä¢</span>
            Create a quiet space for initial settling
          </li>
          <li class="flex items-start">
            <span class="text-green-600 mr-2">‚Ä¢</span>
            Research local veterinarians and emergency clinics
          </li>
          <li class="flex items-start">
            <span class="text-green-600 mr-2">‚Ä¢</span>
            Plan for daily exercise and socialization routines
          </li>
        </ul>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="mt-12 text-center bg-gray-50 rounded-2xl p-8">
      <h3 class="text-xl font-semibold text-gray-900 mb-4">Ready to Meet Your New Best Friend?</h3>
      <p class="text-gray-700 mb-6">
        Questions about a specific dog or the adoption process? Our team is here to help.
      </p>
      <a 
        href="/contact-us" 
        class="inline-flex items-center px-8 py-4 bg-blue-600 text-white rounded-xl hover:bg-blue-700 font-semibold text-lg transition-colors shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-transform"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4-8 9-8s9 3.582 9 8z" />
        </svg>
        Get in Touch
      </a>
    </div>
  </div>
</Base>

<style>
  .animals-grid {
    min-height: 400px;
  }
  
  /* Loading animation */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .asm3-adoptable-item {
    animation: fadeIn 0.6s ease-out forwards;
  }
  
  .asm3-adoptable-item:nth-child(1) { animation-delay: 0.1s; }
  .asm3-adoptable-item:nth-child(2) { animation-delay: 0.2s; }
  .asm3-adoptable-item:nth-child(3) { animation-delay: 0.3s; }
  .asm3-adoptable-item:nth-child(4) { animation-delay: 0.4s; }
  .asm3-adoptable-item:nth-child(5) { animation-delay: 0.5s; }
  .asm3-adoptable-item:nth-child(6) { animation-delay: 0.6s; }
</style>