---
import Base from "../layouts/Base.astro";
const account = import.meta.env.PUBLIC_ASM_ACCOUNT;
---
<Base title="Adoptable Animals">
  <h1 class="text-3xl font-semibold mb-4">Adoptable Animals</h1>
  {account ? (
    <>
      <div id="asm3-adoptables"></div>
      <script>
        // Optional: open animal profiles in an overlay instead of a new tab
        window.asm3_adoptable_iframe = true;
        // You can also expose dropdown filters by defining `asm3_adoptable_filters`
        // Example: window.asm3_adoptable_filters = "species,sex,age,goodwith";
      </script>
      <script src={`https://service.sheltermanager.com/asmservice?method=animal_view_adoptable_js&account=${account}`}></script>
    </>
  ) : (
    <p class="text-sm text-red-600">PUBLIC_ASM_ACCOUNT is not set.</p>
  )}
</Base>